{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceFolder}/server/src/main.ts",
            "preLaunchTask": "tsc: build - server/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/server/dist/**/*.js"
            ],
            "args": [
                "--port",
                "8888"
            ],
            "cwd": "${workspaceFolder}/server"
        }
    ]
}
